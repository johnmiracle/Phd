extends ./layout/mainlayout
include ./mixins/_flash-messages


block content
  section
      .container
        .shopping-cart
          if Object.keys(products).length >= 1
            h3 Cart
            .column-labels
              label.product-image Image
              label.product-details Product
              label.product-price Price
              label.product-quantity Quantity
              label.product-removal Remove
              label.product-line-price Total
            each product in products
              .product
                .product-image
                  img(src='https://s.cdpn.io/3/dingo-dog-bones.jpg')
                .product-details
                  .product-title #{product.item.name} 
                  p.product-description  
                    |  #{product.item.description}   
                .product-price #{product.price}
                .product-quantity
                  span.badge.right-align= product.qty
                .product-removal
                  a.remove-product(href='/remove/'+product.item._id)
                    | Remove
                .product-line-price #{`${product.price}`}
            .totals
              .totals-item
                label Subtotal
                #cart-subtotal.totals-value 71.97
              .totals-item
                label Tax (5%)
                #cart-tax.totals-value 3.60
              .totals-item
                label Shipping
                #cart-shipping.totals-value 15.00
              .totals-item.totals-item-total
                label Grand Total
                #cart-total.totals-value #{`${totalPrice}`}
              button.checkout Checkout
          else  
            .card-content
              h4.center No Items In Cart



                
              
      